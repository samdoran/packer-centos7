{
  "variables": {
    "rhn_password": "{{ env `RHN_PASSWORD` }}",
    "rhn_username": "{{ env `RHN_USERNAME` }}"
  },
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/install-ansible.sh",
      "type": "shell"
    },
    {
      "playbook_file": "ansible/provision.yml",
      "role_paths": [
        "ansible/roles/packer-rhel"
      ],
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E '{{.Path}}'",
      "inline": [ "/sbin/reboot" ],
      "type": "shell",
      "expect_disconnect": true,
      "pause_before": "30s"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/CentOS-7-x86_64-Minimal-1708.iso",
        "http://centos.mbni.med.umich.edu/mirror/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso"
      ],
      "output_directory": "boxes",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_timeout": "15m",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ]
      ],
      "vm_name": "packer-centos7-x86_64"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{ .Provider }}-centos7.box",
      "type": "vagrant"
    }
  ]
}
